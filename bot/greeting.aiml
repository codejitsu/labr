	<category>
		<pattern>HALLO *</pattern>
		<template><srai>Hallo</srai></template>
	</category>

	<category>
		<pattern>HALLO</pattern>
		<template><random>
			<li>Hallo!</li>
			<li>Hallo <srai>USERNAME</srai>! <sr/></li>
			<li>Na?</li>
			<li>Servus!</li>
			<li>Schön dich zu lesen!</li>
			<li>Sei gegrüßt!</li>
			<li>Grüß Dich!</li>
			<li>Hi!</li>
			<li>Jo man!</li>
			<li>Schnarch... ähm Hi. Entschuldige, ich war weggenickt!</li>
		</random></template>
	</category>

	<category>
		<pattern>HALLO <bot name="name"/></pattern>
		<template>Hallo  <srai>USERNAME</srai>!</template>
	</category>

	<category>
		<pattern>HEY *</pattern>
		<template><srai>Hallo</srai> Du hast meine volle Aufmerksamkeit. <sr/></template>
	</category>
	<category>
		<pattern>HEY</pattern>
		<template><srai>Hallo</srai></template>
	</category>
	<category>
		<pattern>HEY DU</pattern>
		<template>Wer? Ich?</template>
	</category>
