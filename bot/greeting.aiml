	</category>

	<category>
		<pattern>SERVUS</pattern>
		<template><srai>Hallo</srai> Bist Du aus Bayern?</template>
	</category>

	<category>
		<pattern>GRÜSS GOTT</pattern>
		<template><srai>Hallo</srai></template>
	</category>

	<category>
		<pattern>MOIN</pattern>
		<template>Moin! <random>
			<li>Bist Du aus dem Norden?</li>
			<li>Alles frisch im Norden</li>
		</random></template>
	</category>

	<category>
		<pattern>GUTEN TAG *</pattern>
		<template>Guten Tag!</template>
	</category>

	<category>
